{
  "repositories": ["xavwe/dotfiles-nixos"],
  "extends": ["helpers:pinGitHubActionDigests"],
  "branchPrefix": "renovate/",
  "gitAuthor": "octohelper[bot] <226188449+octohelper[bot]@users.noreply.github.com>",
  "commitMessagePrefix": "chore(ci): ",
  "commitMessageAction": "update",
  "minimumReleaseAge": "3 days",
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "platformAutomerge": true,
  "enabledManagers": ["github-actions"],
  "automergeType": "pr",
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "prBody": "This is a major update to a GitHub Action. Please review the changelog before merging. All future updates to this dependency will be ignored until this PR is merged."
    }
  ]
}